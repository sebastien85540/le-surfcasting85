{{!--  Page d'articles --}}

<section class="section articlesPage" id="1">
  <div class="container">
    <div class="columns">
      {{#if user}}
      {{#each (limit posts 5)}}
      <div class="column is-3">
        <div class="card">
          <div class="card-image">
            <figure class="image is-square">
              <img src="{{image}}" alt="image">
            </figure>
          </div>
          <div class="card-content" id="dash">
            <div class="content" style="overflow:hidden">
              <a href="/articles/{{_id}}">
                <h2>{{title}}</h2>
              </a>
              <p>{{{content}}}</p>
              <p>publi√© par {{author}}, le {{moment createDate format="DD / MM / YYYY"}}</p>
            </div>
          </div>
          <a href="/articleEdit/{{_id}}">
            <i class="fas fa-edit"></i>
          </a>
          <a href="/delete/article/{{_id}}">
            <i class="fas fa-trash-alt"></i>
          </a>
        </div>
      </div>
      {{/each}}
      {{/if}}
    </div>
  </div>
  <nav class="pagination" role="navigation" aria-label="pagination">
    <a class="pagination-previous" title="This is the first page" disabled>Retour</a>
    <a class="pagination-next">Suivant</a>
    <ul class="pagination-list">
      <li>
        <a class="pagination-link is-current" aria-label="Page 1" aria-current="page" href="#1">1</a>
      </li>
      <li>
        <a class="pagination-link" aria-label="Goto page 2">2</a>
      </li>
      <li>
        <a class="pagination-link" aria-label="Goto page 3">3</a>
      </li>
    </ul>
  </nav>
</section>